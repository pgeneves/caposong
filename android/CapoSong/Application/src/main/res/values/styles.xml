<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="GreenBackground" parent="@style/AppTheme">
        <item name="android:background">@color/background</item>
    </style>
    <style name="YellowBackground" parent="@style/AppTheme">
        <item name="android:background">@color/background</item>
    </style>
    <style name="WhiteBackground" parent="@style/AppTheme">
        <item name="android:background">#FFFFFF</item>
    </style>
    <style name="SongLyrics" parent="@style/AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/list</item>
    </style>
    <style name="SongItem" parent="@style/AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/list</item>
    </style>
    <style name="SongTitle" parent="@style/AppTheme">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/list</item>
    </style>

</resources>