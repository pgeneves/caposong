<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/YellowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        style="@style/GreenBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="2">

        <ImageView
            android:id="@+id/imageViewTop"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="top|fill_horizontal"
            android:background="@color/yellow"
            android:scaleType="fitXY"
            android:src="@drawable/negative" />

        <!--<TextView-->
        <!--android:id="@+id/songTitle"-->
        <!--style="@style/SongTitle"-->
        <!--android:background="@color/yellow"-->
        <!--android:layout_column="0"-->
        <!--android:layout_columnSpan="2"-->
        <!--android:layout_height="47dp"-->
        <!--android:layout_gravity="top|fill_horizontal"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="CAPOSONG"-->
        <!--android:textAppearance="?android:attr/textAppearanceLarge" />-->

        <ListView
            android:id="@+id/lvItems"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="64dp"
            android:layout_column="0"
            android:layout_gravity="left|fill_vertical"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="0dp"
            android:background="@color/yellow"
            android:scaleType="fitEnd"
            android:src="@drawable/berimbau_side" />

        <EditText
            android:id="@+id/searchText"
            android:layout_height="47dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="end|fill_horizontal"
            android:ems="10"
            android:inputType="text|textFilter"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="@string/action_search" />

    </GridLayout>

</RelativeLayout>